<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registrieren</title>
   
    <link  rel="stylesheet" href="/src/public/css/sign.css">
</head>
<body class="flex flex-col  h-screen">
    <div class="form container">
        <h2>Registrieren</h2>
        <form action="/register" method="post">
            <div class="form groupe">
                <label for="name">Name</label>
                <input type="text" id="name" name="username" placeholder="Enter your name">
            </div>
            <div class="form groupe">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" placeholder="Enter your Email">
            </div>
            <div class="form groupe">
                <label for="password">Passwort</label>
                <input type="password" id="password" name="password" placeholder="Enter your password">
            </div>
            <div id="messageDiv"></div>
            <button type="submit">Registrieren</button>
        </form>
    </div>

    <script>
        // Beispiel-Funktion um die Nachricht anzuzeigen
        async function showMessage() {
    const messageDiv = document.getElementById('messageDiv');
    try {
        const response = await fetch('/register');
        if (!response.ok) {
            throw new Error(`Serverfehler: ${response.status}`);
        }
        const data = await response.json();
        messageDiv.textContent = data.message;
        messageDiv.style.color = 'red';
    } catch (error) {
        messageDiv.textContent = 'Es gab ein Problem beim Abrufen der Nachricht.';
        messageDiv.style.color = 'red';
        console.error('Fehler:', error);
    }
}

showMessage();
    </script>
</body>
</html>