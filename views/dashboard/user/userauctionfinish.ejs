<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="flex flex-col  h-screen">
  <%- include('../../includes/header.ejs') %>

    <main class="container mx-auto p-4">

    
      <div class="auction-cards grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 justify-center mb-5">
        
       
        <div class="card bg-white shadow-md rounded-lg p-3 flex flex-col items-center">
          <a href="/au/<%= auctions._id%>" class="mb-4 w-full">
            <div class="w-full h-64 flex items-center justify-center overflow-hidden rounded-lg">
              <img class="object-cover w-full h-full" src="/uploads/<%= auctions.img[0] %>" alt="<%= auctions.titel %>">
            </div>
          </a>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Preis: <%= auctions.startbit %></h3>
          <h4 class="text-lg text-gray-600 mb-4"><%= auctions.titel %></h4>
          <p class="text-gray-600 text-sm text-center"><%= auctions.description %></p>
        </div>
    
      </div>
    
     
      <div class="bg-gray-100 p-5 rounded-lg shadow-md">
        <h1 class="text-2xl font-semibold text-gray-800 mb-4">Bitte kontaktiere den Verkäufer um möglichst schnell die Ware zu bezahlen</h1>
        
       
        <div class="flex items-center mb-4">
         
            <img class="w-16 h-16 rounded-full mr-4" src="/uploads/<%=creator.img%>" alt="user photo">
        
          <div>
            <h2 class="text-lg font-bold"><%= creator.name %></h2>
            <h1 class="text-gray-800">Email</h1>
            <p class="text-gray-600"><%= creator.email %></p>
            <h1 class="text-gray-800">Telephone</h1>
            <p class="text-gray-600"><%= creator.phone %></p>
            <h1 class="text-gray-800">Addresse</h1>
            <p class="text-gray-600"><%= creator.address %></p>
          </div>
        </div>


        
        <p class="font-medium text-purple-600 mb-4">
          <%= auctions.status == 1 ? "Noch zu Bezahlen" : auctions.status == 2 ? "Bezahlt" : auctions.status == 3 ? "Gesendet" : "Abgeschlossen" %>
        </p>
    
    
        <form action="/aufinish/u/<%= auctions._id%>" method="post">
          <% if (auctions.status == 1) { %>
            <button class="bg-purple-500 hover:bg-purple-600 text-white font-bold py-2 px-4 rounded-full">
              Bezahlen
            </button>
          
          <% } else if (auctions.status == 3 ||  auctions.status == 2) { %>


            <div class="max-w-md mx-auto bg-white shadow-md rounded-lg p-6">
              <h2 class="text-2xl font-semibold mb-4">Verkäufer Bewerten</h2>    
              <form  method="post" action="/user">
                <div class="mb-4">
                  <label for="rating" class="block text-gray-700 mb-2">Bewertung</label>
                  <div class="flex space-x-1" id="starRating">
                    <!-- Star 1 -->
                    <svg data-value="1" class="star w-6 h-6 text-gray-600 cursor-pointer hover:text-yellow-400" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
                    </svg>
                    <!-- Star 2 -->
                    <svg data-value="2" class="star w-6 h-6 text-gray-600 cursor-pointer hover:text-yellow-400" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
                    </svg>
                    <!-- Star 3 -->
                    <svg data-value="3" class="star w-6 h-6 text-gray-600 cursor-pointer hover:text-yellow-400" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
                    </svg>
                    <!-- Star 4 -->
                    <svg data-value="4" class="star w-6 h-6 text-gray-600 cursor-pointer hover:text-yellow-400" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
                    </svg>
                    <!-- Star 5 -->
                    <svg data-value="5" class="star w-6 h-6 text-gray-600 cursor-pointer hover:text-yellow-400" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
                    </svg>
                  </div>
                 
                  <input type="hidden" id="rating" name="rating" value="1" required>
                </div>
            
               
                <div class="mb-4">
                  <h2 class="text-purple-600 text-xl font-semibold mb-2">Beschreibung</h2>
                  <textarea name="description" id="description" class="w-full border border-gray-300 rounded-md p-3 focus:border-purple-500 focus:ring-2 focus:ring-purple-200 transition resize-none" rows="4"></textarea>
                </div>
            
              
                <button type="submit" class="w-full bg-purple-500 text-white py-2 rounded-md hover:bg-blue-600">Absenden</button>
              </form>
            </div>

          <% } else { %>
            <h1 class="text-lg font-semibold text-green-600">Abgeschlossen</h1>
          <% } %>
        </form>
      </div>
      
    </main>

    <%- include('../../includes/footer.ejs') %>

    <script>
      
      const stars = document.querySelectorAll('#starRating .star');
      const ratingInput = document.getElementById('rating');
    
      stars.forEach((star, index) => {
       
        star.addEventListener('mouseover', function () {
          stars.forEach((s, i) => {
            if (i <= index) {
              s.classList.add('text-yellow-400');
            } else {
              s.classList.remove('text-yellow-400');
            }
          });
        });
    
        // Reset the stars when not hovering
        star.addEventListener('mouseout', function () {
          stars.forEach(s => s.classList.remove('text-yellow-400'));
          // Apply the selected rating
          stars.forEach((s, i) => {
            if (i < ratingInput.value) {
              s.classList.add('text-yellow-400');
            }
          });
        });
   
        
        star.addEventListener('click', function () {
          ratingInput.value = index + 1;
          stars.forEach((s, i) => {
            if (i <= index) {
              s.classList.add('text-yellow-400');
            } else {
              s.classList.remove('text-yellow-400');
            }
          });
        });
      });
    </script>
</body>
</html>